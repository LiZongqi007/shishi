<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_bar"
        layout="@layout/layout_title" />

    <ScrollView
        style="@style/BackgroudStyle"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/BackgroudStyle"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@drawable/ic_launcher" >

                <LinearLayout
                    android:id="@+id/edit_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/user_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/my_frament_head" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="dkjfhkh"
                        android:textColor="@color/white" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1px"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" >

                    <TextView
                        style="@style/HorizonItemTextViewStyle"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:text="关注的果农"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1px"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" >

                    <TextView
                        style="@style/HorizonItemTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="1px"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:text="关注的水果"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1px"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center" >

                    <TextView
                        style="@style/HorizonItemTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="1px"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:text="我的积分"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/my_orders"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/horizon_item_height" >

                    <TextView
                        style="@style/HorizonItemTextViewStyle"
                        android:drawableLeft="@drawable/my_frament_order"
                        android:drawablePadding="3dip"
                        android:text="我的订单" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:drawablePadding="3dip"
                        android:drawableRight="@drawable/boult"
                        android:gravity="center_vertical"
                        android:text="查看全部"
                        android:textColor="@color/font_grey"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/back_grey" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/horizon_item_height" >

                    <LinearLayout
                        android:id="@+id/wait_pay"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="待付款"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/wait_pay_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="112"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wait_delivery"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="待发货"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/wait_delivery_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="112"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/has_deliveried"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="待收货"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/has_deliveried_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="112"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/has_take_delivery"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="待评价"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/has_take_delivery_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="112"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/abnormal"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="异常订单"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/abnormal_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="112"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/back_grey" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/my_msg"
                style="@style/HorizonItemStyle"
                android:layout_marginTop="4dp" >

                <TextView
                    style="@style/HorizonItemTextViewStyle"
                    android:drawableLeft="@drawable/my_frament_quan"
                    android:drawablePadding="3dip"
                    android:text="果友圈" />

                <TextView
                    android:id="@+id/msg_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/red_point"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_wallet"
                style="@style/HorizonItemStyle"
                android:visibility="gone" >

                <TextView
                    style="@style/HorizonItemTextViewStyle"
                    android:drawableLeft="@drawable/my_frament_juan"
                    android:drawablePadding="3dip"
                    android:text="我的优惠券" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/boult" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_bill"
                style="@style/HorizonItemStyle" >

                <TextView
                    style="@style/HorizonItemTextViewStyle"
                    android:drawableLeft="@drawable/my_frament_bao"
                    android:drawablePadding="3dip"
                    android:text="我的钱包" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/boult" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_remind"
                style="@style/HorizonItemStyle" >

                <TextView
                    style="@style/HorizonItemTextViewStyle"
                    android:drawableLeft="@drawable/my_frament_yuan"
                    android:drawablePadding="3dip"
                    android:text="开园提醒" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/red_point"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/system_message"
                style="@style/HorizonItemStyle" >

                <TextView
                    style="@style/HorizonItemTextViewStyle"
                    android:drawableLeft="@drawable/my_frament_yuan"
                    android:drawablePadding="3dip"
                    android:text="系统消息" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/red_point"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting"
                style="@style/HorizonItemStyle"
                android:layout_marginTop="4dp" >

                <TextView
                    style="@style/HorizonItemTextViewStyle"
                    android:drawableLeft="@drawable/my_frament_set"
                    android:drawablePadding="3dip"
                    android:text="设置" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/boult" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/D:/LYF-Workspace/FruitBuyer/app/src/main/res/layout/fragment_personal_center.xml -->