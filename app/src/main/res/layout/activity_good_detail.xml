<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BackgroudStyle" >

    <include
        android:id="@+id/lay_title"
        layout="@layout/layout_title" />

    <ScrollView
        style="@style/BackgroudStyle"
        android:layout_below="@id/lay_title"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/BackgroudStyle"
            android:background="@color/back_grey"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="160dp" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/user_info_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/theme_green"
                    android:drawableLeft="@drawable/collection_no"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="已关注"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/theme_green"
                    android:drawableLeft="@drawable/video"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="视频"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/add_to_basket"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_green"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="加入果篮"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@id/add_to_basket"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:text="价格："
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="¥45.00"
                        android:textColor="@color/theme_green"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="库存：1000"
                        android:textColor="@color/black" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="攀枝花凯特芒果  新鲜水果  现货发售 5斤装"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="进店有优惠~江浙沪包邮-申通快递；其他地区，韵达快递；村组不发货"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="规格：" />

                <!-- <com.gaozhen.fruitseller.view.view.MListView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >
                </com.gaozhen.fruitseller.view.view.MListView> -->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/contact_to_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_green"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="联系果农"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@id/contact_to_seller"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:text="果农信息：四川攀枝花芒果总代理"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/to_right" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="好评度：90%"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/to_right" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="水果介绍："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- <com.gaozhen.fruitseller.view.view.MListView
                android:id="@+id/fruit_picture"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </com.gaozhen.fruitseller.view.view.MListView> -->
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/basket"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/basket"
            android:layout_alignTop="@id/basket"
            android:background="@color/red"
            android:text="2"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <EditText
                android:layout_width="70dp"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="¥45.00"
            android:textColor="@color/theme_green" />
    </RelativeLayout>

</RelativeLayout>